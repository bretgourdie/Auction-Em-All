extends layout

block content
  .wrap
    .container-fluid
        h1#titleheader Welcome to Auction 'Em All

        div#room-div
          .row
            .col-xs-8.col-sm9
              b In Room:
            .col-xs-8.col-sm9
              #user-list
        
        div#team-div
          .row
            .col-xs-8.col-sm9
              b Team:
            .col-xs-8.col-sm9
              #my-team None
        div#bid-div(hidden)
          hr

          .row
            .col-xs-8.col-sm9
              b Points:
            .col-xs-8.col-sm9
              p#num-points 0
            .col-xs-8.col-sm9
              b#bid-message Waiting to bid on:
            .col-xs-8.col-sm9
              p#bidding-on Gor-Don
          .row
            .col-xs-8.col-sm9
              b#bid-timer-message Waiting for next round...
            .col-xs-8.col-sm9
              p#bid-timer 0:10
            .col-xs-4.col-sm9
              button#bid-button.btn.btn-primary.btn-lg.btn-block Bid
        hr

        div#messages(style="overflow-y: scroll; max-height: 400px;")
        .push
  .footer
    .container-fluid
      .row
        .col-xs-8.col-sm-9
          input#message-box(type="text" class="form-control input-lg" placeholder="Chat..." rows="3")
        .col-xs-4.col-sm-3
          button#send-message-btn.btn.btn-primary.btn-lg.btn-block Send

block body_end
    script(type='text/javascript' src='/js/index.js')
